@model CustomerOrderManagement.Models.ViewModels.Products.ProductCreateViewModel
<h1>Product Create</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" asp-for="Description" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="UnitPrice">UnitPrice</label>
        <input type="text" class="form-control" asp-for="UnitPrice" placeholder="UnitPrice">
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>